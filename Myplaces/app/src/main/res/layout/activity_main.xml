<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/placeOne"
        android:src="@drawable/monserrate"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="center"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@id/placeThree"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/placeTwo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/placeTwo"
        android:src="@drawable/salitre_magico"
        android:scaleType="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@id/placeFour"
        app:layout_constraintLeft_toRightOf="@id/placeOne"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/placeThree"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/parque_el_tunal"
        android:text="Hello World!"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/placeFour"
        app:layout_constraintTop_toBottomOf="@id/placeOne" />

    <ImageButton
        android:id="@+id/placeFour"
        android:src="@drawable/jardin_botanico"
        android:scaleType="center"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/placeThree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeTwo" />


</androidx.constraintlayout.widget.ConstraintLayout>